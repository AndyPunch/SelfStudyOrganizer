<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:background="@drawable/touch_color"
        android:padding="5dp"
        android:weightSum="100"

        >

        <LinearLayout
            android:id="@+id/linearInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/startStudyField_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="qqq"

                android:textColor="@color/custom_text_color"
                android:textStyle="italic"/>

            <View
                android:id="@+id/fos_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"

                android:background="@color/divider_color_two"/>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <ImageView
                    android:id="@+id/studyField_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/ic_launcher2"
                    android:contentDescription="@string/description_study_field"/>

                <TextView
                    android:id="@+id/studyFieldTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/custom_text_color"
                    android:textSize="20sp"
                    android:textStyle="italic"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearInner2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/studyField_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/drawer_drop_menu"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

